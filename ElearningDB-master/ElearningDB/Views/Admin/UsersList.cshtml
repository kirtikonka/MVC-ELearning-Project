@model IEnumerable<ElearningDB.Models.User>
<h2>USERS LIST</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Mobile</th>
            <th>Username</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Mobile</td>
                <td>@user.Username</td>
                <td>
                    <form asp-action="BlockUnblockUser" method="post" class="d-inline">
                        <input type="hidden" name="userId" value="@user.UserId" />
                        <input type="hidden" name="block" value="@(user.IsBlocked ? "false" : "true")" />
                        @if (user.IsBlocked)
                        {
                            <button type="submit" class="btn btn-success">Unblock</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-danger">Block</button>
                        }
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
